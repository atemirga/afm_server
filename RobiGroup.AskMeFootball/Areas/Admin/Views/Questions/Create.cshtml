@model Models.Questions.QuestionCreateModel


<div class="box box-info">
    <!-- /.box-header -->
    <!-- form start -->
    <form id="create-form" class="form-horizontal" method="post">
        <div class="box-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="CorrectAnswerId" type="hidden" />
            <input asp-for="CardId" type="hidden" />
            <div class="form-group">
                <label asp-for="Text" class="control-label col-sm-4"></label>
                <div class="col-sm-8">
                    <input asp-for="Text" class="form-control" />
                    <span asp-validation-for="Text" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="StartTime" class="control-label col-sm-4"></label>
                <div class="col-sm-8">
                    <input asp-for="StartTime" class="form-control" />
                    <span asp-validation-for="StartTime" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ExpirationTime" class="control-label col-sm-4"></label>
                <div class="col-sm-8">
                    <input asp-for="ExpirationTime" class="form-control" />
                    <span asp-validation-for="ExpirationTime" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Delay" class="control-label col-sm-4"></label>
                <div class="col-sm-8">
                    <input asp-for="Delay" class="form-control" />
                    <span asp-validation-for="Delay" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Answers" class="control-label col-sm-4"></label>
                <div class="col-sm-8">
                    @for (int i = 0; i < Model.Answers.Count; i++)
                    {
                        <div class="input-group">
                            <span class="input-group-addon">
                                <input type="radio" name="CorrectAnswer" value="@i" />
                            </span><input class="form-control answer" asp-for="Answers[i]" placeholder="Введите вариант ответа" />
                        </div>
                    }
                    <span asp-validation-for="Answers" class="text-danger"></span>
                </div>
            </div>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <button type="submit" class="btn btn-default">Отмена</button>
            <button type="submit" class="btn btn-info pull-right">Сохранить</button>
        </div>
        <!-- /.box-footer -->
    </form>
</div>

@section Scripts
{
    
    <script type="text/javascript">

        $(function() {
            $('#create-form').submit(function() {
                var radioButtons = $("#create-form input:radio[name='CorrectAnswer']");
                var selectedIndex = -1;
                radioButtons.each(function (i, j) {
                    if (j.checked) {
                        selectedIndex = i;
                    }
                });
                $("#CorrectAnswerId").val(selectedIndex);    

                // $('input.answer').app
            });
        });

    </script>
}
